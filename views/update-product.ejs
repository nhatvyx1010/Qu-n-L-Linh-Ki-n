<h1>Update Product</h1>
<form action="" method="post">
    
    <table border="1" width="100%">
        <tr>
            <th>ID san pham</th>
            <th>Ten san pham</th>
            <th>Ton kho</th>
            <th>Gia Ban</th>
            <th>Image</th>

        </tr>
        <% if(productEjs.length > 0){ %>
            <tr>
                <td><%- productEjs[0].sanphamID %>  </td>
                <td><%- productEjs[0].tenSanPham %>  </td>
                <td><%- productEjs[0].tonKho %>  </td>
                <td><%- productEjs[0].gia %>  </td>
                <td><%- productEjs[0].img %>  </td>
            </tr>
        <% }else{ %>
            <h1> product not found! </h1>
        <% } %>  

    </table><br>

    <label>New Name Product:</label>
    <input type="text" name="name" placeholder="Enter name" required><br><br>
    <label>New Ton Kho:</label>
    <input type="int" name="tonKho" placeholder="Enter ton kho" required><br><br>
    <label>New Gia Ban:</label>
    <input type="double" name="giaBan" placeholder="Enter gia ban" required><br><br>
    <label>New Image:</label>
    <input type="text" name="image" placeholder="Enter image" required><br><br>

    <input type="submit" value="submit";>
    
</form>